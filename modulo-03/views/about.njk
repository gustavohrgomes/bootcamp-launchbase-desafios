{% extends "layout.njk" %}

{% block head %}

   <title>Sobre a Rocketseat</title>

{% endblock %}

{% block content %}

   <div id="wrapper">
      <img src="{{about.avatar_url}}" alt="Rocketseat">

      <h1>{{about.name}}</h1>
      <p>{{about.description}}</p>

      <div id="technologies">
         <h3>Principais Tecnologias:</h3>
         <ul>
            {% for tech in about.technologies %}
               <li>{{tech.name}}</li>
            {% endfor %}
         </ul>
      </div>
   </div>

   <div id="links-footer" class="links">
      {% for link in about.links %}
         <a href="{{link.url}}" target="_blank">{{link.name}}</a>
      {% endfor %}
   </div>

{% endblock %}