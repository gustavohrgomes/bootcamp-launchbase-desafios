{% extends "layout.njk" %}

{% block head %}

  <title>Cursos Rocketseat</title>

{% endblock %}

{% block content %}
  <div id="wrapper">
    <h1>Cursos</h1>
  </div>

  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card__image-container">
          <img src="{{item.image_url}}" alt="Rocketseat - {{item.id}} logo">
        </div>
        <div class="card__content">
          <p>{{item.content}}</p>
        </div>
        <div class="card__info">
          <p>{{item.info}}</p>
          <p class="card__price">{{item.price}}</p>
        </div>
      </div>
    {% endfor %}
  </section>

  <script src="/scripts.js" type="text/javascript"></script>

{% endblock %}